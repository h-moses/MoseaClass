<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_10"
    android:background="@color/white">

    <TextView
        android:id="@+id/test_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/test_deadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/gray_text"
        app:layout_constraintLeft_toLeftOf="@id/test_title"
        app:layout_constraintTop_toBottomOf="@id/test_title" />

    <View
        android:id="@+id/divider4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        android:layout_marginVertical="@dimen/dp_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/test_deadline"/>

    <TextView
        android:id="@+id/test_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/dp_16"
        android:textSize="@dimen/sp_14"
        android:textColor="#00032C"
        app:layout_constraintLeft_toLeftOf="@id/test_title"
        app:layout_constraintTop_toBottomOf="@id/divider4" />

    <Button
        android:id="@+id/btn_access_test"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginVertical="@dimen/dp_16"
        android:text="进入测验"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/white"
        android:background="@drawable/login_btn_back"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider4" />

</androidx.constraintlayout.widget.ConstraintLayout>